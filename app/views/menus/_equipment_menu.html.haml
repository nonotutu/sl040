%ul

  - active = controller_name == 'equipment' && action_name == 'index' |
    ? :active : nil                             |
  %li.title= link_to t(:equipment), equipment_path, :class => active
  
  - active = controller_name == 'containers' |
    || controller_name == 'contents'         |
    ? :active : nil                          |
  %li= link_to "#{Container.model_name.human :count => 2}", containers_path, :class => active
  
  - active = controller_name == 'items'      |
    ? :active : nil                          |
  %li= link_to "#{Item.model_name.human :count => 2}", items_path, :class => active
  
  - active = controller_name == 'purchases'  |
    ? :active : nil                          |
  %li= link_to "#{Purchase.model_name.human :count => 2}", purchases_path, :class => active
  
  -# %ul.two
  - active = controller_name == 'categories' |
    ? :active : nil                          |
  %li= link_to "#{Category.model_name.human :count => 2}", categories_path, :class => active

  - active = controller_name == 'suppliers'  |
    ? :active : nil                          |
  %li= link_to "#{Supplier.model_name.human :count => 2}", suppliers_path, :class => active
  
  - active = action_name == 'table_items_containers'      |
    ? :active : nil                                       |
  %li= link_to "all contents", table_items_containers_path, :class => active
