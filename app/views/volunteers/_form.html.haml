= simple_form_for @volunteer do |f|
  - if @volunteer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@volunteer.errors.count, "error")} prohibited this volunteer from being saved:"
      %ul
        - @volunteer.errors.full_messages.each do |msg|
          %li= msg

  #table_form
    %table
      %tr
        %td= f.label :section
        %td= f.association :section, include_blank: false, label: false
      %tr
        %td= f.label :pos
        %td= f.number_field :pos, size: 4
      %tr
        %td= f.label :cr_number
        %td= f.input :cr_number, input_html: { size: 16 }, label: false
      %tr
        %td= f.label :first_name
        %td= f.input :first_name, input_html: { size: 24 }, label: false
      %tr
        %td= f.label :last_name
        %td= f.input :last_name, input_html: { size: 24 }, label: false
      %tr
        %td= f.label :sex
        %td= f.input :sex, :as => :radio, :collection => [['F',1],['M','2']], :label => false
      %tr
        %td= f.label :date_of_birth
        %td= f.input :date_of_birth, start_year: DateTime.now.year - 80, end_year: DateTime.now.year - 10, include_blank: true, label: false
      %tr
        %td= f.label :place_of_birth
        %td= f.input :place_of_birth, input_html: { size: 16 }, label: false
      %tr
        %td= f.label :address
        %td= f.input :address, input_html: { rows: 3, cols: 32 }, label: false
      %tr
        %td= f.label :email
        %td= f.input :email, input_html: { size: 32 }, label: false
      %tr
        %td= f.label :land_phone
        %td= f.input :land_phone, input_html: { size: 16 }, label: false
      %tr
        %td= f.label :cell_phone
        %td= f.input :cell_phone, input_html: { size: 16 }, label: false
      %tr
        %td= f.label :bank_account
        %td= f.input :bank_account, input_html: { size: 16 }, label: false
      %tr
        %td= f.label :cr_joined_on
        %td= f.input :cr_joined_on, start_year: DateTime.now.year - 70, end_year: DateTime.now.year, include_blank: true, label: false
      %tr
        %td= f.label :departments
        %td= f.association :departments, :as => :check_boxes, :label => false, :label_method => :short_name
      %tr
        %td
        %td
          = f.submit t(:save)