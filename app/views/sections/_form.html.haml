= simple_form_for @section do |f|
  - if @section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |msg|
          %li= msg

  %table.form
    %tr
      %td= f.label :name
      %td= f.input :name, label: false
    %tr
      %td= f.label :number
      %td= f.input :number, label: false
    %tr
      %td
      %td{align: :right}
        = f.submit 'Save'
