= simple_form_for @supplier do |f|
  - if @supplier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@supplier.errors.count, "error")} prohibited this supplier from being saved:"
      %ul
        - @supplier.errors.full_messages.each do |msg|
          %li= msg

  %table.form
    %tr
      %td= f.label :name
      %td= f.input :name
    %tr
      %td= f.label :address
      %td= f.input :address
    %tr
      %td
      %td{:align => :right}
        = f.submit t :save
